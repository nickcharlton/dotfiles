# vim: set filetype=sh:

#
# General
#
export DOTFILES="$HOME/.dotfiles"

#
# System
#
case $(uname)
    Darwin)
        PLATFORM=osx
        ;;
    Linux)
        PLATFORM=linux
        ;;
    FreeBSD)
        PLATFORM=freebsd
        ;;
    *)
        PLATFORM=unknown
        ;;
esac
export PLATFORM

#
# User
#
export EDITOR=vim

export NAME='Nick Charlton'
export EMAIL='nick@nickcharlton.net'
export TZ='Europe/London'

export DEBFULLNAME=$NAME
export DEBEMAIL=$EMAIL

export VAGRANT_DEFAULT_PROVIDER=vmware_fusion

export ATLAS_USER=nickcharlton

#
# Path
#
export PATH="/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/bin:/usr/sbin:/sbin"

# dotfiles bin
export PATH="$DOTFILES/bin:$PATH"
# haskell
export PATH="$HOME/.cabal/bin:$PATH"
# heroku toolbelt
export PATH="/usr/local/heroku/bin:$PATH"
# golang
mkdir -p $HOME/go # make sure it exists
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin
# python/virtualenv
export WORKON_HOME=~/.virtualenvs
mkdir -p $WORKON_HOME
source /usr/local/bin/virtualenvwrapper.sh
# chefkdk
export PATH="$PATH:/opt/chefdk/embedded/bin"

if [[ "$PLATFORM" == "osx" ]]; then
    # xcode and xcode tools
    export XCODE="`xcode-select --print-path`"
    export PATH="$XCODE/Tools:$PATH"
    # ruby gems
    export PATH="/usr/local/opt/ruby/bin:$PATH"
    # MacTeX
    export PATH="/usr/local/texlive/2014/bin/x86_64-darwin:$PATH"
    # Fastlane
    export PATH="$HOME/.fastlane/bin:$PATH"
fi

#
# Secrets
#
if [ -f ~/.secrets ]; then
    source ~/.secrets
fi

